<EmberWormhole @destinationElement={{this.parentDomService.container}}>
  <style>
    body {
      transform: translate(0, 0);
      width: 90vw;
      height: 100vh;
    }

    #vemos-container {
      position: fixed;
      right: 0;
      top: 0;
      bottom: 0;
      width: 10vw;
      background-color: black;
    }

    #vemos-frame {
      height: 100%;
      width: 100%;
    }


  .vemos-frame .layout__box {
    flex: 0 0 auto;
    min-width: 0;
    min-height: 0;
  }

  .vemos-frame .layout__box.o__has-columns {
    display: flex;
    flex-direction: row;
  }

  .vemos-frame .layout__box.o__has-rows {
    display: flex;
    flex-direction: column;
  }

  .vemos-frame .layout__box.o__scrolls {
    overflow: auto;
    -webkit-overflow-scrolling: touch;
  }

  .vemos-frame .layout__box.o__flexes-to-1 {
    flex: 1 1 auto;
  }

  .vemos-frame .layout__box.o__flexes-to-5 {
    flex: 5 1 auto;
  }

  .vemos-frame .layout__box.o__centers-horizontally {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: center;
  }

  .vemos-frame .layout__box.o__centers-vertically {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
  }

  .vemos-frame .layout__box.o__centers-all {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
  }
  </style>
</EmberWormhole>
