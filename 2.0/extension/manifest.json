{
  "name": "Vemos",
  "version": "0.0.1",
  "description": "Watch movies and TV shows together with your friends",
  "manifest_version": 2,
  // "icons": {
  //   "16": "icons/16.png",
  //   "48": "icons/48.png",
  //   "128": "icons/128.png"
  // },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["assets/app.css"],
      "js": ["assets/app.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["cookies", "*://*.vemos.org/*"],
  "web_accessible_resources": [
    "frame-styles.css",
    "assets/app.css",
    "assets/app.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; font-src 'self'; connect-src 'self';"
}
